@model IEnumerable<Gestionale_Ospedaliero_e_Medico.Models.Medico>

@{
    ViewData["Title"] = "Medici";
}

<h1>Gestione Medici</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Aggiungi Nuovo Medico</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.Reparto)</th>
            <th>@Html.DisplayNameFor(model => model.Primario)</th>
            <th>Ospedale</th>
            <th>Pazienti Attuali</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Reparto)</td>
                    <td>@(item.Primario ? "Sì" : "No")</td>
                    <td>@item.Ospedale?.Nome</td>
                    <td>@item.Pazienti?.Count</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifica</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Dettagli</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Elimina</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
