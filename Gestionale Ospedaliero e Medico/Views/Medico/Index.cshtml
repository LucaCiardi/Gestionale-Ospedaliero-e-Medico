@model IEnumerable<Gestionale_Ospedaliero_e_Medico.Models.Medico>

@{
    ViewData["Title"] = "Medici";
}

<h1>Gestione Medici</h1>

<p>
    <a href="@Url.Action("Create", "Medico")" class="btn btn-primary">Aggiungi Nuovo Medico</a>
</p>

<!-- Filter Form -->
<form method="get" class="card card-body shadow-sm mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Ricerca</label>
                <input type="text" name="SearchTerm" class="form-control"
                       placeholder="Nome o Cognome..." value="@ViewBag.CurrentFilter">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Ospedale</label>
                <select name="OspedaleId" class="form-select">
                    <option value="">-- Seleziona Ospedale --</option>
                    @foreach (SelectListItem item in ViewBag.Ospedali)
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Reparto</label>
                <select name="Reparto" class="form-select">
                    <option value="">-- Seleziona Reparto --</option>
                    @foreach (SelectListItem item in ViewBag.Reparti)
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Ruolo</label>
                <select name="Primario" class="form-select">
                    <option value="">-- Tutti --</option>
                    <option value="true">Primario</option>
                    <option value="false">Non Primario</option>
                </select>
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Filtra
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.Reparto)</th>
            <th>@Html.DisplayNameFor(model => model.Primario)</th>
            <th>Ospedale</th>
            <th>Pazienti Attuali</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                <td>@Html.DisplayFor(modelItem => item.Reparto)</td>
                <td>@(item.Primario ? "Sì" : "No")</td>
                <td>@item.Ospedale?.Nome</td>
                <td>@item.Pazienti?.Count</td>
                <td>
                    <a href="@Url.Action("Edit", "Medico", new { id = item.Id })" class="btn btn-warning btn-sm">Modifica</a>
                    <a href="@Url.Action("Details", "Medico", new { id = item.Id })" class="btn btn-info btn-sm">Dettagli</a>
                    <a href="@Url.Action("Delete", "Medico", new { id = item.Id })" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
