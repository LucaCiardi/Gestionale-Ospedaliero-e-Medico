@model Gestionale_Ospedaliero_e_Medico.Models.Medico

@{
    ViewData["Title"] = "Modifica Medico";
}

<h1>Modifica Medico</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Edit", "Medico")" method="post">
            @Html.AntiForgeryToken()
            <div class="text-danger">@Html.ValidationSummary(true)</div>
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="Nome" class="control-label">@Html.DisplayNameFor(m => m.Nome)</label>
                <input type="text" id="Nome" name="Nome" value="@Model.Nome" class="form-control" />
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Cognome" class="control-label">@Html.DisplayNameFor(m => m.Cognome)</label>
                <input type="text" id="Cognome" name="Cognome" value="@Model.Cognome" class="form-control" />
                @Html.ValidationMessageFor(m => m.Cognome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Dob" class="control-label">Data di Nascita</label>
                <input type="date" id="Dob" name="Dob" value="@Model.Dob.ToString("yyyy-MM-dd")" class="form-control" />
                @Html.ValidationMessageFor(m => m.Dob, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Residenza" class="control-label">@Html.DisplayNameFor(m => m.Residenza)</label>
                <input type="text" id="Residenza" name="Residenza" value="@Model.Residenza" class="form-control" />
                @Html.ValidationMessageFor(m => m.Residenza, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Reparto" class="control-label">@Html.DisplayNameFor(m => m.Reparto)</label>
                <input type="text" id="Reparto" name="Reparto" value="@Model.Reparto" class="form-control" />
                @Html.ValidationMessageFor(m => m.Reparto, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input type="checkbox" id="Primario" name="Primario" value="true" @(Model.Primario ? "checked" : "") class="form-check-input" />
                    <input type="hidden" name="Primario" value="false" />
                    <label for="Primario" class="form-check-label">@Html.DisplayNameFor(m => m.Primario)</label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="PazientiGuariti" class="control-label">@Html.DisplayNameFor(m => m.PazientiGuariti)</label>
                <input type="number" id="PazientiGuariti" name="PazientiGuariti" value="@Model.PazientiGuariti" class="form-control" />
                @Html.ValidationMessageFor(m => m.PazientiGuariti, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="TotaleDecessi" class="control-label">@Html.DisplayNameFor(m => m.TotaleDecessi)</label>
                <input type="number" id="TotaleDecessi" name="TotaleDecessi" value="@Model.TotaleDecessi" class="form-control" />
                @Html.ValidationMessageFor(m => m.TotaleDecessi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="OspedaleId" class="control-label">Ospedale</label>
                @Html.DropDownList("OspedaleId", (SelectList)ViewBag.Ospedali, new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.OspedaleId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a href="@Url.Action("Index", "Medico")" class="btn btn-secondary">Torna alla Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
