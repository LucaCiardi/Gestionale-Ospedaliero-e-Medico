@model Gestionale_Ospedaliero_e_Medico.Models.Medico

@{
    ViewData["Title"] = "Modifica Medico";
}

<h1>Modifica Medico</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dob" class="control-label">Data di Nascita</label>
                <input asp-for="Dob" class="form-control" type="date" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Residenza" class="control-label"></label>
                <input asp-for="Residenza" class="form-control" />
                <span asp-validation-for="Residenza" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reparto" class="control-label"></label>
                <input asp-for="Reparto" class="form-control" />
                <span asp-validation-for="Reparto" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="Primario" class="form-check-input" />
                    <label asp-for="Primario" class="form-check-label"></label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PazientiGuariti" class="control-label"></label>
                <input asp-for="PazientiGuariti" class="form-control" />
                <span asp-validation-for="PazientiGuariti" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotaleDecessi" class="control-label"></label>
                <input asp-for="TotaleDecessi" class="form-control" />
                <span asp-validation-for="TotaleDecessi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OspedaleId" class="control-label">Ospedale</label>
                <select asp-for="OspedaleId" class="form-select" asp-items="ViewBag.Ospedali"></select>
                <span asp-validation-for="OspedaleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Torna alla Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
