@model IEnumerable<Gestionale_Ospedaliero_e_Medico.Models.Paziente>

@{
    ViewData["Title"] = "Pazienti";
}

<h1>Gestione Pazienti</h1>

<p>
    <a href="@Url.Action("Create", "Paziente")" class="btn btn-primary">Aggiungi Nuovo Paziente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.DataNascita)</th>
            <th>@Html.DisplayNameFor(model => model.CodiceFiscale)</th>
            <th>@Html.DisplayNameFor(model => model.DataRicovero)</th>
            <th>Medico Curante</th>
            <th>Ospedale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                <td>@item.DataNascita.ToShortDateString()</td>
                <td>@Html.DisplayFor(modelItem => item.CodiceFiscale)</td>
                <td>@item.DataRicovero.ToShortDateString()</td>
                <td>@($"{item.Medico?.Cognome} {item.Medico?.Nome}")</td>
                <td>@item.Medico?.Ospedale?.Nome</td>
                <td>
                    <a href="@Url.Action("Edit", "Paziente", new { id = item.Id })" class="btn btn-warning btn-sm">Modifica</a>
                    <a href="@Url.Action("Details", "Paziente", new { id = item.Id })" class="btn btn-info btn-sm">Dettagli</a>
                    <a href="@Url.Action("Delete", "Paziente", new { id = item.Id })" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
