@model IEnumerable<Gestionale_Ospedaliero_e_Medico.Models.Paziente>

@{
    ViewData["Title"] = "Pazienti";
}

<h1>Gestione Pazienti</h1>

<p>
    <a href="@Url.Action("Create", "Paziente")" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Aggiungi Nuovo Paziente
    </a>
</p>

<!-- Filter Form -->
<form method="get" class="card card-body shadow-sm mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Ricerca</label>
                <input type="text" name="SearchTerm" class="form-control"
                       placeholder="Nome, Cognome o Codice Fiscale..." value="@ViewBag.CurrentFilter">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Medico</label>
                <select name="MedicoId" class="form-select">
                    <option value="">-- Seleziona Medico --</option>
                    @foreach (SelectListItem item in ViewBag.Medici)
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Reparto</label>
                <select name="Reparto" class="form-select">
                    <option value="">-- Seleziona Reparto --</option>
                    @foreach (SelectListItem item in ViewBag.Reparti)
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Data Ricovero Da</label>
                <input type="date" name="DataRicoveroInizio" class="form-control">
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="form-label">Data Ricovero A</label>
                <input type="date" name="DataRicoveroFine" class="form-control">
            </div>
        </div>
        <!-- Other filter controls... -->
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Filtra
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Reset</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <a href="@Url.Action("Index", new { sortBy = "nome", ascending = ViewBag.CurrentSort == "nome" ? false : true })" class="text-dark text-decoration-none">
                        @Html.DisplayNameFor(model => model.Nome)
                        @if (ViewBag.CurrentSort == "nome")
                        {
                            <i class="bi bi-arrow-@(ViewBag.SortAscending ? "up" : "down")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { sortBy = "cognome", ascending = ViewBag.CurrentSort == "cognome" ? false : true })" class="text-dark text-decoration-none">
                        @Html.DisplayNameFor(model => model.Cognome)
                        @if (ViewBag.CurrentSort == "cognome")
                        {
                            <i class="bi bi-arrow-@(ViewBag.SortAscending ? "up" : "down")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a href="@Url.Action("Index", new { sortBy = "dataNascita", ascending = ViewBag.CurrentSort == "dataNascita" ? false : true })" class="text-dark text-decoration-none">
                        @Html.DisplayNameFor(model => model.DataNascita)
                        @if (ViewBag.CurrentSort == "dataNascita")
                        {
                            <i class="bi bi-arrow-@(ViewBag.SortAscending ? "up" : "down")"></i>
                        }
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.CodiceFiscale)</th>
                <th>
                    <a href="@Url.Action("Index", new { sortBy = "dataRicovero", ascending = ViewBag.CurrentSort == "dataRicovero" ? false : true })" class="text-dark text-decoration-none">
                        @Html.DisplayNameFor(model => model.DataRicovero)
                        @if (ViewBag.CurrentSort == "dataRicovero")
                        {
                            <i class="bi bi-arrow-@(ViewBag.SortAscending ? "up" : "down")"></i>
                        }
                    </a>
                </th>
                <th>Medico Curante</th>
                <th>Ospedale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                    <td>@item.DataNascita.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.CodiceFiscale)</td>
                    <td>@item.DataRicovero.ToShortDateString()</td>
                    <td>@($"{item.Medico?.Cognome} {item.Medico?.Nome}")</td>
                    <td>@item.Medico?.Ospedale?.Nome</td>
                    <td>
                        <a href="@Url.Action("Edit", "Paziente", new { id = item.Id })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifica
                        </a>
                        <a href="@Url.Action("Details", "Paziente", new { id = item.Id })" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Dettagli
                        </a>
                        <a href="@Url.Action("Delete", "Paziente", new { id = item.Id })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Elimina
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
