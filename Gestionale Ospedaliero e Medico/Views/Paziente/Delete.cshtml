@model Gestionale_Ospedaliero_e_Medico.Models.Paziente

@{
    ViewData["Title"] = "Elimina Paziente";
}

<h1>Elimina Paziente</h1>

<div class="alert alert-danger">
    <h4>Sei sicuro di voler eliminare questo paziente?</h4>
    <p>Questa operazione non può essere annullata.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cognome)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cognome)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataNascita)</dt>
        <dd class="col-sm-9">@Model.DataNascita.ToShortDateString()</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodiceFiscale)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CodiceFiscale)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataRicovero)</dt>
        <dd class="col-sm-9">@Model.DataRicovero.ToShortDateString()</dd>

        <dt class="col-sm-3">Medico Curante</dt>
        <dd class="col-sm-9">@($"{Model.Medico?.Cognome} {Model.Medico?.Nome}")</dd>

        <dt class="col-sm-3">Ospedale</dt>
        <dd class="col-sm-9">@Model.Medico?.Ospedale?.Nome</dd>
    </dl>

    <form action="@Url.Action("Delete", "Paziente")" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Paziente")" class="btn btn-secondary">Annulla</a>
    </form>
</div>
