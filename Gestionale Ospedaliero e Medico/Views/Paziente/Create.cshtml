@model Gestionale_Ospedaliero_e_Medico.Models.Paziente

@{
    ViewData["Title"] = "Nuovo Paziente";
}

<h1>Aggiungi Nuovo Paziente</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataNascita" class="control-label"></label>
                <input asp-for="DataNascita" class="form-control" type="date" />
                <span asp-validation-for="DataNascita" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Residenza" class="control-label"></label>
                <input asp-for="Residenza" class="form-control" />
                <span asp-validation-for="Residenza" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CodiceFiscale" class="control-label"></label>
                <input asp-for="CodiceFiscale" class="form-control" maxlength="16" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataRicovero" class="control-label"></label>
                <input asp-for="DataRicovero" class="form-control" type="date" />
                <span asp-validation-for="DataRicovero" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MedicoId" class="control-label">Medico Curante</label>
                <select asp-for="MedicoId" class="form-select" asp-items="ViewBag.Medici"></select>
                <span asp-validation-for="MedicoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crea" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Torna alla Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
