@model Gestionale_Ospedaliero_e_Medico.Models.Paziente

@{
    ViewData["Title"] = "Modifica Paziente";
}

<h1>Modifica Paziente</h1>

<div class="row">
    <div class="col-md-6">
        <form action="@Url.Action("Edit", "Paziente")" method="post">
            @Html.AntiForgeryToken()
            <div class="text-danger">@Html.ValidationSummary(true)</div>
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="Nome" class="control-label">@Html.DisplayNameFor(m => m.Nome)</label>
                <input type="text" id="Nome" name="Nome" value="@Model.Nome" class="form-control" />
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Cognome" class="control-label">@Html.DisplayNameFor(m => m.Cognome)</label>
                <input type="text" id="Cognome" name="Cognome" value="@Model.Cognome" class="form-control" />
                @Html.ValidationMessageFor(m => m.Cognome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="DataNascita" class="control-label">@Html.DisplayNameFor(m => m.DataNascita)</label>
                <input type="date" id="DataNascita" name="DataNascita" value="@Model.DataNascita.ToString("yyyy-MM-dd")" class="form-control" />
                @Html.ValidationMessageFor(m => m.DataNascita, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="Residenza" class="control-label">@Html.DisplayNameFor(m => m.Residenza)</label>
                <input type="text" id="Residenza" name="Residenza" value="@Model.Residenza" class="form-control" />
                @Html.ValidationMessageFor(m => m.Residenza, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="CodiceFiscale" class="control-label">@Html.DisplayNameFor(m => m.CodiceFiscale)</label>
                <input type="text" id="CodiceFiscale" name="CodiceFiscale" value="@Model.CodiceFiscale" class="form-control" maxlength="16" />
                @Html.ValidationMessageFor(m => m.CodiceFiscale, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="DataRicovero" class="control-label">@Html.DisplayNameFor(m => m.DataRicovero)</label>
                <input type="date" id="DataRicovero" name="DataRicovero" value="@Model.DataRicovero.ToString("yyyy-MM-dd")" class="form-control" />
                @Html.ValidationMessageFor(m => m.DataRicovero, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label for="MedicoId" class="control-label">Medico Curante</label>
                @Html.DropDownList("MedicoId", (SelectList)ViewBag.Medici, new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.MedicoId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a href="@Url.Action("Index", "Paziente")" class="btn btn-secondary">Torna alla Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
