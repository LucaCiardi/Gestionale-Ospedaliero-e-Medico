@model IEnumerable<Gestionale_Ospedaliero_e_Medico.Models.Ospedale>

@{
    ViewData["Title"] = "Ospedali";
}

<h1>Gestione Ospedali</h1>

<p>
    <a href="@Url.Action("Create", "Ospedale")" class="btn btn-primary">Aggiungi Nuovo Ospedale</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Sede)</th>
            <th>@Html.DisplayNameFor(model => model.Pubblico)</th>
            <th>Numero Medici</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Sede)</td>
                <td>@(item.Pubblico ? "Sì" : "No")</td>
                <td>@item.Medici?.Count</td>
                <td>
                    <a href="@Url.Action("Edit", "Ospedale", new { id = item.Id })" class="btn btn-warning btn-sm">Modifica</a>
                    <a href="@Url.Action("Details", "Ospedale", new { id = item.Id })" class="btn btn-info btn-sm">Dettagli</a>
                    <a href="@Url.Action("Delete", "Ospedale", new { id = item.Id })" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
