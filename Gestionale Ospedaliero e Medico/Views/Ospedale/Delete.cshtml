@model Gestionale_Ospedaliero_e_Medico.Models.Ospedale

@{
    ViewData["Title"] = "Elimina Ospedale";
}

<h1>Elimina Ospedale</h1>

<div class="alert alert-danger">
    <h4>Sei sicuro di voler eliminare questo ospedale?</h4>
    <p>Questa operazione non può essere annullata.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Sede)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Sede)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Pubblico)</dt>
        <dd class="col-sm-9">@(Model.Pubblico ? "Sì" : "No")</dd>

        <dt class="col-sm-3">Numero Medici</dt>
        <dd class="col-sm-9">@Model.Medici?.Count</dd>
    </dl>

    <form action="@Url.Action("Delete", "Ospedale")" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Ospedale")" class="btn btn-secondary">Annulla</a>
    </form>
</div>
