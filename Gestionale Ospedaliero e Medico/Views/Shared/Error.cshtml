@model Gestionale_Ospedaliero_e_Medico.Models.ErrorViewModel
@{
    ViewData["Title"] = "Errore";
}

<h1 class="text-danger">Errore.</h1>
<h2 class="text-danger">Si è verificato un errore durante l'elaborazione della richiesta.</h2>

@if (Model?.ShowRequestId ?? false)
{
    <p>
        <strong>Request ID:</strong> <code>@Model?.RequestId</code>
    </p>
}

<div class="alert alert-danger">
    <h4>Dettagli dell'errore:</h4>
    <p>@Model?.ErrorMessage</p>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Torna alla Home</a>
</div>
